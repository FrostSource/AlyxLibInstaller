<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AlyxLibInstaller.NewAddonDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AlyxLibInstaller"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
            <TextBlock Text="Choose the name of your new addon."
                   FontSize="20"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   TextWrapping="Wrap"/>
            <InfoBar x:Name="AddonNameWarningBar"
                   IsOpen="True"
                   Severity="Warning"
                   Message="Invalid name! Must contain only letters, numbers and underscore characters."
                   Opacity="0" />
            <TextBox x:Name="AddonNameTextbox" TextChanged="TextBox_TextChanged" />
        </StackPanel>
    </Grid>
</Page>
