<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx xmlns:winex="using:WinUIEx" Width="1024" Height="560" Title="AlyxLib Installer" MinHeight="300" MinWidth="350"
    x:Class="AlyxLibInstaller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AlyxLibInstaller"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <!--<StackPanel Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" VerticalAlignment="Stretch">-->

    <Grid>

        <!-- Main content -->
        <Grid x:Name="RootGrid" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">

            <!-- Define rows for MenuBar and main content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <!-- MenuBar row -->
                <RowDefinition Height="*" />
                <!-- Main content row -->
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" x:Name="AppTitleBar" Grid.Row="0" VerticalAlignment="Top" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Height="32">

                <Image Source="/alyxlib.ico" Width="16" Height="16" Margin="8,0,0,0" />
                <TextBlock x:Name="AppTitle" Text="AlyxLib Installer" VerticalAlignment="Top" Margin="8,8,0,0" FontFamily="Segoe UI Variable" Style="{StaticResource CaptionTextBlockStyle}" />
            </StackPanel>

            <MenuBar Grid.Row="1" x:Name="MainMenuBar" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <MenuBarItem Title="File">
                    <MenuFlyoutSubItem Text="Addons" x:Name="MenuBarAddons" GotFocus="MenuBarAddons_GotFocus"/>
                    <MenuFlyoutItem Text="Open Addon..."/>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Download AlyxLib" x:Name="MenuBarDownloadAlyxLib" Click="MenuBarDownloadAlyxLib_Click" />
                    <MenuFlyoutItem Text="Select AlyxLib Path" x:Name="MenuBarSelectAlyxLibPath" Click="MenuBarSelectAlyxLibPath_Click" />
                    <MenuFlyoutItem Text="Open AlyxLib Path" x:Name="MenuBarOpenAlyxLibPath" Click="MenuBarOpenAlyxLibPath_Click" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Exit"/>
                </MenuBarItem>

                <MenuBarItem Title="Addon">
                    <MenuFlyoutItem Text="Open Addon Folder" Click="OpenAddonFolder_Click" />
                </MenuBarItem>

                <MenuBarItem Title="Settings">
                    <ToggleMenuFlyoutItem Text="Remember Last Addon" x:Name="MenuBarRememberLastAddon" Click="MenuBarRememberLastAddon_Click" />
                    <ToggleMenuFlyoutItem Text="Verbose Logging" x:Name="MenuBarVerboseLogging" Click="MenuBarVerboseLogging_Click" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutSubItem Text="Theme" x:Name="MenuBarThemes">
                        <!--<RadioMenuFlyoutItem Text="Light" GroupName="ThemeGroup" />
                            <RadioMenuFlyoutItem Text="Dark" GroupName="ThemeGroup" />-->
                    </MenuFlyoutSubItem>
                    <MenuFlyoutItem Text="Clear Console" Click="ClearDebugConsole_Click"/>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Add Explorer Context Menu" Click="MenuBarAddContextMenu_Click"/>
                    <MenuFlyoutItem Text="Remove Explorer Context Menu" Click="MenuBarRemoveContextMenu_Click"/>
                </MenuBarItem>

                <MenuBarItem Title="Help">
                    <MenuFlyoutItem Text="Open Wiki In Browser" x:Name="MenuBarOpenWiki" Click="MenuBarOpenWiki_Click"/>
                    <MenuFlyoutItem Text="Open GitHub In Browser" x:Name="MenuBarOpenGitHub" Click="MenuBarOpenGitHub_Click"/>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Check For Updates" x:Name="MenuBarCheckForUpdates" Click="MenuBarCheckForUpdates_Click"/>
                    <MenuFlyoutItem Text="About" />
                </MenuBarItem>
            </MenuBar>

            <!-- Install options -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <InfoBar Grid.Row="0" x:Name="AlyxLibNotFoundInfoBar" Message="AlyxLib path could not be found! Please use File->Select AlyxLib Path" Severity="Error" IsClosable="False" IsOpen="True" />
                <InfoBar Grid.Row="0" x:Name="AlyxLibTopInfoBar" Message="" Severity="Informational" IsClosable="True" IsOpen="False" />

                <!--<StackPanel Orientation="Vertical" Spacing="16" Background="{ThemeResource DividerStrokeColorDefaultBrush}" CornerRadius="8"  BorderThickness="1" Padding="10" Margin="10">-->
                <Grid Grid.Row="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" CornerRadius="8" Margin="10" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <!-- Content area takes up the remaining space -->
                        <RowDefinition Height="*" />
                        <!-- Fixed height row for buttons at the bottom -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.75*" />
                    </Grid.ColumnDefinitions>

                    <!--<StackPanel Grid.Column="0" Grid.Row="0" Spacing="16" Padding="16">-->
                    <ScrollViewer Grid.Column="0" Grid.Row="0" VerticalScrollBarVisibility="Visible">
                        <StackPanel Spacing="16" Padding="16">

                            <TextBox x:Name="AddonModNameTextBox" Header="Mod script folder name:" PlaceholderText="Script folder name" CharacterCasing="Lower" TextChanged="AddonModNameTextBox_TextChanged" />
                            <TextBlock x:Name="AddonModNameErrorText" Visibility="Visible" TextWrapping="Wrap" Opacity="0" Text="Some test error text" Margin="10 -8 0 -8" Foreground="{ThemeResource DebugConsoleErrorTextColor}" FontSize="12" />

                            <local:AlyxLibInstallOption x:Name="InstallOptionScriptBase"
                                CheckboxContent="VScript Base"
                                TooltipText=""
                                DescriptionText="All AlyxLib vscript related files, including 'gameinit', 'mod init' and '.vscode' settings files."
                                Click="InstallOptionScriptBase_Click"
                            />

                            <StackPanel Orientation="Horizontal" Margin="0,-5,0,0">
                                
                                    <Rectangle Width="2" Height="15" Fill="Gray" Margin="10,0,0,15" VerticalAlignment="Bottom" />
                                    <!-- Vertical Line -->
                                    <Rectangle Width="15" Height="2" Fill="Gray" Margin="0,0,0,15" VerticalAlignment="Bottom"/>
                                    <!-- Horizontal Line -->
                                
                                <TextBlock Text="Script Editor:" VerticalAlignment="Center" Margin="20,0,10,0" />
                                <ComboBox x:Name="ScriptEditorSettingsOption" ItemsSource="{x:Bind ScriptEditorOptions}" DisplayMemberPath="Item1" SelectedValuePath="Item2" SelectedIndex="0" MinWidth="110" />
                            </StackPanel>

                            <!--<local:AlyxLibInstallOption x:Name="InstallOptionVSCodeSnippets"
                                CheckboxContent="AlyxLib and VScript VSCode Snippets"
                                TooltipText=""
                                DescriptionText="Adds code snippets to the .vscode folder."
                            />-->

                            <local:AlyxLibInstallOption x:Name="InstallOptionSoundEvent"
                                CheckboxContent="SoundEvent / Manifest"
                                TooltipText=""
                                DescriptionText="Creates '.vsndevts' and '.vrman' files for your addon using the addon folder name."
                            />

                            <local:AlyxLibInstallOption x:Name="InstallOptionPanorama"
                                CheckboxContent="Panorama"
                                TooltipText=""
                                DescriptionText="Adds AlyxLib Panorama files to your addon."
                            />

                            <local:AlyxLibInstallOption x:Name="InstallOptionGit"
                                CheckboxContent="Git"
                                TooltipText=""
                                DescriptionText="Initializes a Git repository in your addon content folder."
                            />
                        </StackPanel>

                    </ScrollViewer>
            
            
                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center" Padding="16">
                        <Button x:Name="InstallButton" Style="{StaticResource AccentButtonStyle}" Content="Install" Click="InstallButton_Click" />
                        <SplitButton x:Name="UninstallButton" Content="Remove For Upload" Click="UninstallButton_Click">
                            <SplitButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Remove All Unchanged" Click="UninstallRemoveUnchanged_Click"/>
                                </MenuFlyout>
                            </SplitButton.Flyout>
                        </SplitButton>
                    </StackPanel>

                    <Grid Grid.Column="1" Grid.RowSpan="3" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"  Padding="16">
                        <!--<TextBlock Text="This is the 75% StackPanel" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <RichEditBox x:Name="WindowConsole" Width="Auto" Height="NaN" IsReadOnly="True" MaxHeight="1000" TextWrapping="Wrap" />-->
                        <ScrollView x:Name="DebugConsoleScroller" VerticalScrollBarVisibility="Auto" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" CornerRadius="8">
                            <RichTextBlock x:Name="DebugConsole" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsTextSelectionEnabled="True" FontFamily="Consolas" TextWrapping="Wrap" Padding="10" />
                        </ScrollView>
                    </Grid>

                </Grid>
            </Grid>

        </Grid>

        <Grid x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed">
            <ProgressRing x:Name="DownloadProgressRing" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50"/>
            <TextBlock x:Name="DownloadProgressText" Text="Downloading AlyxLib" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0,100,0,0" />
        </Grid>
    </Grid>


    <!--</StackPanel>-->
</winex:WindowEx>
