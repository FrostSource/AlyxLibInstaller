<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AlyxLibInstaller.PrivilegeWarningDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AlyxLibInstaller"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
            <TextBlock Text="Administrator or Developer Mode Required"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{StaticResource WarningTextBrush}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>
            <TextBlock Text="This app requires permission to create symbolic links. Please run this application as administrator, or enable Windows Developer Mode. After making changes, restart the application."
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0,8,0,0"
                       TextAlignment="Center"/>
            <Button Content="Open Developer Mode Settings"
                    HorizontalAlignment="Center"
                    Click="OpenDeveloperModeSettings_Click"
                    Padding="12,6"/>
        </StackPanel>
    </Grid>
</Page>
