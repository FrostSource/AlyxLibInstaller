<UserControl x:Class="AlyxLibInstallerWPF.Dialogs.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlyxLibInstallerWPF"
             xmlns:viewmodels="clr-namespace:AlyxLibInstallerShared;assembly=AlyxLibInstallerShared" d:DataContext="{d:DesignInstance Type=viewmodels:AboutInfo}"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!--Icon-->
        <Image Source="pack://application:,,,/alyxlib_icon.ico"
               Width="64" Height="64"
               VerticalAlignment="Top"
               Margin="0,0,12,0"
               RenderOptions.BitmapScalingMode="HighQuality"
               />

        <!-- Text content -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType">
            <TextBlock Text="{Binding AppName}"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,4"
                       />
            
            <TextBlock Text="{Binding Version}"
                       FontSize="12"
                       Margin="0,0,0,6"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       />
            
            <TextBlock FontStyle="Italic"
                       Margin="0,0,0,4"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       >
                By <Run Text="{Binding Author}"/>
            </TextBlock>
            
            <TextBlock Text="{Binding Description}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"
                       />
            
            <TextBlock Margin="0,0,0,4">
                <Hyperlink NavigateUri="{Binding Website}"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    GitHub Repository
                </Hyperlink>
            </TextBlock>

            <TextBlock Text="{Binding License, StringFormat=License {0}}"
                       FontSize="12"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Margin="0,0,0,8"
                       />

            <TextBlock Text="Built with:"
                       FontSize="12"
                       FontWeight="DemiBold"
                       Margin="0,8,0,4"
                       />

            <!-- BuiltWith list (compact) -->
            <ItemsControl ItemsSource="{Binding BuiltWith}" FontSize="12">
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Margin" Value="0,0,0,2"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="• {0}">
                                    <Binding Path="." Mode="OneWay"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            
        </StackPanel>

    </Grid>
</UserControl>
