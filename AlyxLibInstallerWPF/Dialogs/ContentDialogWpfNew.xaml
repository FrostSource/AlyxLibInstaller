<UserControl x:Class="AlyxLibInstallerWPF.Dialogs.ContentDialogWpfNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlyxLibInstallerWPF.Dialogs"
             xmlns:Converters="clr-namespace:AlyxLibInstallerWPF.Converters"
             xmlns:viewmodels="clr-namespace:AlyxLibInstallerShared.Services.Dialog;assembly=AlyxLibInstallerShared" d:DataContext="{d:DesignInstance Type=viewmodels:DialogConfiguration}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <Converters:TextToGridLengthConverter x:Key="TextToGridLengthConverter" />
        <Converters:DialogIconToBrushConverter x:Key="DialogIconToBrushConverter" />
        <Thickness x:Key="DialogMargin">20</Thickness>
    </UserControl.Resources>
    
    <Grid Background="#40000000">
        <Border  Background="{DynamicResource SolidBackgroundFillColorTertiaryBrush}" CornerRadius="8" BorderBrush="{DynamicResource ControlStrokeColorSecondaryBrush}" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="50" Color="Black" Opacity="0.1" ShadowDepth="0" />
            </Border.Effect>
            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!--<TextBlock Grid.Row="0"
                           FontWeight="SemiBold" FontSize="20" Margin="20,0,20,10" Visibility="{Binding Title, Converter={StaticResource StringToVisibilityConverter}}">
                    <Run FontFamily="Segoe MDL2 Assets" Text="{Binding IconGlyph, Mode=OneWay}" />
                    <Run Text="{Binding Title, Mode=OneWay}" />
                </TextBlock>-->
                <StackPanel Orientation="Horizontal" Margin="20,0,20,10" VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
               Text="{Binding IconGlyph}"
               FontSize="20"
               VerticalAlignment="Center"
               Visibility="{Binding IconGlyph, Converter={StaticResource StringToVisibilityConverter}}"
                               Foreground="{Binding IconType, Converter={StaticResource DialogIconToBrushConverter}}"
               Margin="0,0,5,0" />
                    <TextBlock Text="{Binding Title}"
               FontWeight="SemiBold"
               FontSize="20"
               VerticalAlignment="Center"/>
                </StackPanel>

                <ContentControl Margin="20,0,20,20" Grid.Row="1" Content="{Binding DialogContent, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <Border Grid.Row="2"
                        Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultSolidBrush}"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,8,8"
                        Padding="10"
                        >

                    <Grid Margin="4,8,4,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding PrimaryButtonText, Converter={StaticResource TextToGridLengthConverter}}"/>
                            <ColumnDefinition Width="{Binding SecondaryButtonText, Converter={StaticResource TextToGridLengthConverter}}"/>
                            <ColumnDefinition Width="{Binding CancelButtonText, Converter={StaticResource TextToGridLengthConverter}}"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="PrimaryButton"
                                Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,4,0"
                                Tag="{x:Static local:ContentDialogResult.Primary}"
                                Content="{Binding PrimaryButtonText}"
                                Visibility="{Binding PrimaryButtonText, Converter={StaticResource StringToVisibilityConverter}}"
                                IsDefault="True"
                                Style="{DynamicResource AccentButtonStyle}"
                                MinWidth="80"
                                />
                        <Button x:Name="SecondaryButton"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Margin="4,0,4,0"
                                Tag="{x:Static local:ContentDialogResult.Secondary}"
                                Content="{Binding SecondaryButtonText}"
                                Visibility="{Binding SecondaryButtonText, Converter={StaticResource StringToVisibilityConverter}}"
                                MinWidth="80"
                                    />
                        <Button x:Name="CloseButton"
                                Grid.Column="2"
                                HorizontalAlignment="Stretch"
                                Margin="4,0,0,0"
                                Tag="{x:Static local:ContentDialogResult.None}"
                                Content="{Binding CancelButtonText}"
                                Visibility="{Binding CancelButtonText, Converter={StaticResource StringToVisibilityConverter}}"
                                IsCancel="True"
                                MinWidth="80"
                                />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
