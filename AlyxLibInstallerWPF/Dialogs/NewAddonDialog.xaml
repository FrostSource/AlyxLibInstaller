<Page x:Class="AlyxLibInstallerWPF.Dialogs.NewAddonDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlyxLibInstallerWPF"
      mc:Ignorable="d"
      MinWidth="400"
      Title="NewAddonDialog">

    <Grid Margin="24">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="16">
            <TextBlock Text="Choose the name of your new addon." Margin="16"
               FontSize="15"
               FontWeight="Bold"
               TextAlignment="Center"
               TextWrapping="Wrap"/>
            <local:InfoBar x:Name="AddonNameWarningBar" Margin="16"
               IsOpen="True"
               Severity="Warning"
               Message="Invalid name! Must contain only letters, numbers and underscore characters."
               Opacity="0"
               IsClosable="False"
                           />
            <TextBox x:Name="AddonNameTextbox" TextChanged="TextBox_TextChanged" Width="300"/>
        </StackPanel>
    </Grid>
</Page>
