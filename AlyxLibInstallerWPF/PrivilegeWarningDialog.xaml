<UserControl x:Class="AlyxLibInstallerWPF.PrivilegeWarningDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlyxLibInstallerWPF"
      mc:Ignorable="d" 
      >

    <Grid Margin="0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
            <TextBlock Text="Administrator or Developer Mode Required"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{StaticResource WarningTextBrush}"
                   TextAlignment="Center"
                   TextWrapping="Wrap"/>
            <TextBlock
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0,20,0,20"
                   TextAlignment="Center">
                This app requires permission to create symbolic links.
                <LineBreak/>
                Please run this application as administrator, or enable Windows Developer Mode.
                <LineBreak/>
                After making changes, restart the application.
            </TextBlock>
            <Button Content="Open Developer Mode Settings"
                HorizontalAlignment="Center"
                Click="OpenDeveloperModeSettings_Click"
                />
        </StackPanel>
    </Grid>
</UserControl>
