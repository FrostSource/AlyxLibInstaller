<UserControl x:Class="AlyxLibInstallerWPF.InfoBarWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlyxLibInstallerWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Visibility="{Binding IsOpen, ElementName=Root, Converter={StaticResource BooleanToVisibilityConverter}}"
             >


    <Border Background="{Binding Background, RelativeSource={RelativeSource AncestorType=UserControl}}"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="4">

        <DockPanel>
            <!-- Icon -->
            <TextBlock Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       FontSize="16" 
                       Margin="0,0,8,0"
                       VerticalAlignment="Center"/>

            <!-- Message -->
            <TextBlock Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       Foreground="Red"/>

            <!-- Close button -->
            <Button Content="✕" 
                    Visibility="{Binding IsClosable, ElementName=Root, Converter={StaticResource BooleanToVisibilityConverter}}"
                    DockPanel.Dock="Right"
                    Click="CloseButton_Click"
                    Margin="8,0,0,0"/>
        </DockPanel>
    </Border>
</UserControl>
